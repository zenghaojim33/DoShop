#import "ReturnInfoViewController.h"
#import "OrderInfoTableViewCell.h"
@interface ReturnInfoViewController ()<UITableViewDelegate,UITableViewDataSource>
@property (weak, nonatomic) IBOutlet UITableView *returnOrderTableView;
@property (weak, nonatomic) IBOutlet UILabel *orderNo;
@property (weak, nonatomic) IBOutlet UILabel *buyer;
@property (weak, nonatomic) IBOutlet UILabel *createTime;
@property (weak, nonatomic) IBOutlet UILabel *payTime;
@property (weak, nonatomic) IBOutlet UILabel *reason;
@property (weak, nonatomic) IBOutlet UILabel *backTime;
@property (weak, nonatomic) IBOutlet UILabel *price;
@property (weak, nonatomic) IBOutlet UILabel *linkman;
@property (weak, nonatomic) IBOutlet UILabel *phone;
@property (weak, nonatomic) IBOutlet UILabel *address;
@property (weak, nonatomic) IBOutlet UILabel *statu;

@end
static NSString * cellIdentifier = @"returnCell";

@implementation ReturnInfoViewController{
    
    NSMutableArray * _returnInfoArray;
    
}

- (void)viewDidLoad {
    [super viewDidLoad];
    // Do any additional setup after loading the view.
    
    
    
    
    _returnInfoArray = [[NSMutableArray alloc]init];
    [HTTPRequestManager getURL:[NSString stringWithFormat:GET_BACKLISTINFO_API,self.backid] andParameter:nil onCompletion:^(NSDictionary *dict, NSError *error) {
        
        
        
        [_returnInfoArray addObjectsFromArray:dict[@"result"]];
        dispatch_async(dispatch_get_main_queue(), ^{
           
            self.orderNo.text = _returnInfoArray[0][@"orderNo"];
            self.buyer.text = _returnInfoArray[0][@"buyer"];
            self.createTime.text = _returnInfoArray[0][@"createTime"];
            self.payTime.text = _returnInfoArray[0][@"payTime"];
            self.statu.text = ((NSNumber*)_returnInfoArray[0][@"statu"]).stringValue;
            self.reason.text = _returnInfoArray[0][@"reason"];
            self.backTime.text = _returnInfoArray[0][@"backTime"];
            self.price.text = ((NSNumber*)_returnInfoArray[0][@"price"]).stringValue;
            self.linkman.text =_returnInfoArray[0][@"linkman"];
            self.phone.text = _returnInfoArray[0][@"phone"];
            self.address.text = _returnInfoArray[0][@"address"];
        
            [self.returnOrderTableView reloadData];
        });
    }];
    
    
    
    
}



- (void)didReceiveMemoryWarning {
    [super didReceiveMemoryWarning];
    // Dispose of any resources that can be recreated.
    
}

-(UITableViewCell*)tableView:(UITableView *)tableView cellForRowAtIndexPath:(NSIndexPath *)indexPath
{
    OrderInfoTableViewCell * cell = [tableView dequeueReusableCellWithIdentifier:cellIdentifier];
    
    NSString * productName = _returnInfoArray[0][@"productName"];
    NSString * productImg = [NSString stringWithFormat:@"%@%@",BASE_URL,_returnInfoArray[0][@"productImg"]];
    NSString * size = _returnInfoArray[0][@"size"];
    NSNumber * productId = _returnInfoArray[0][@"productId"];
    NSNumber * price = _returnInfoArray[0][@"price"];
    cell.productName.text = productName;
    cell.productId = productId;
    cell.productDetail.text = size;
    cell.productPrice.text = price.stringValue;
    [cell.productImageView sd_setImageWithURL:[NSURL URLWithString:productImg] placeholderImage:nil];
    
    
    return cell;
}


-(NSInteger)tableView:(UITableView *)tableView numberOfRowsInSection:(NSInteger)section
{
    return _returnInfoArray.count;
}


