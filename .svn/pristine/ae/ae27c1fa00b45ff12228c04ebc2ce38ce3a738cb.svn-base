#import "OrderInfoViewController.h"
#import "OrderInfoTableViewCell.h"

@interface OrderInfoViewController ()<UITableViewDataSource,UITableViewDelegate>

@property (weak, nonatomic) IBOutlet UIImageView *BGView1;

@property (weak, nonatomic) IBOutlet UIImageView *BGView2;
@property (weak, nonatomic) IBOutlet UITableView *orderInfoTableView;


//下面是订单信息+收件人信息
@property (weak, nonatomic) IBOutlet UILabel *orderNum;
@property (weak, nonatomic) IBOutlet UILabel *orderAccount;
@property (weak, nonatomic) IBOutlet UILabel *orderTime;
@property (weak, nonatomic) IBOutlet UILabel *payTime;
@property (weak, nonatomic) IBOutlet UILabel *orderStatus;

@property (weak, nonatomic) IBOutlet UILabel *receiverName;

@property (weak, nonatomic) IBOutlet UILabel *phoneNum;
@property (weak, nonatomic) IBOutlet UILabel *address;
@property (weak, nonatomic) IBOutlet UILabel *postCode;


@end
static NSString * cellidentifier = @"OrderInfo";
@implementation OrderInfoViewController

{
    
    
    NSMutableArray * _orderProductArray;
    NSMutableDictionary * _orderInfoDict;

    
}


-(void)viewWillAppear:(BOOL)animated
{
    [super viewWillAppear:animated];
    
    self.title = @"订单详情";
    UIBarButtonItem *backItem = [[UIBarButtonItem alloc] init];
    backItem.title = @"";
    
    self.navigationItem.backBarButtonItem = backItem;
    self.BGView1.layer.shadowColor = [UIColor blackColor].CGColor;
    self.BGView1.layer.shadowOffset = CGSizeMake(1, 1);
    self.BGView1.layer.shadowOpacity = 0.2;
    
    self.BGView2.layer.shadowColor = [UIColor blackColor].CGColor;
    self.BGView2.layer.shadowOffset = CGSizeMake(1, 1);
    self.BGView2.layer.shadowOpacity = 0.2;
    
    backItem.title = @"";
    
    self.navigationItem.backBarButtonItem = backItem;
    
    
    
}
- (void)viewDidLoad {
    [super viewDidLoad];
    
    _orderInfoDict = [[NSMutableDictionary alloc]init];
    _orderProductArray = [[NSMutableArray alloc]init];
    
    [HTTPRequestManager getURL:[NSString stringWithFormat:GET_ORDERINFO_API,self.orderid] andParameter:nil onCompletion:^(NSDictionary *dict, NSError *error) {
        
        _orderInfoDict = [dict[@"result"] mutableCopy];
        _orderProductArray = _orderInfoDict[@"products"];
        
        [self setHeaderViewInfo];
        dispatch_async(dispatch_get_main_queue(), ^{
            [_orderInfoTableView reloadData];
        });
        
        
    }];
    
    
    
    
}


-(void)setHeaderViewInfo
{
    
    self.orderNum.text = _orderInfoDict[@"orderNo"];
    self.orderAccount.text = _orderInfoDict[@"buyer"];
    self.orderTime.text = _orderInfoDict[@"createTime"];
    self.payTime.text = _orderInfoDict[@"payTime"];
    self. orderStatus.text = ((NSNumber*)_orderInfoDict[@"orderId"]).stringValue;
    self.receiverName.text = _orderInfoDict[@"linkMan"];
    self.phoneNum.text = _orderInfoDict[@"mobile"];
    NSString * address = [NSString stringWithFormat:@"%@%@%@",_orderInfoDict[@"city"],_orderInfoDict[@"county"],_orderInfoDict[@"area"]];
    self.address.text = address;
    self.postCode.text = _orderInfoDict[@"postcode"];
    
    
}



- (void)didReceiveMemoryWarning {
    [super didReceiveMemoryWarning];
    // Dispose of any resources that can be recreated.
}


#pragma mark ------UITableView-------


-(UITableViewCell*)tableView:(UITableView *)tableView cellForRowAtIndexPath:(NSIndexPath *)indexPath
{
    
    OrderInfoTableViewCell * cell = [tableView dequeueReusableCellWithIdentifier:cellidentifier];
    NSDictionary * infodict = _orderProductArray[indexPath.row];
    cell.productName.text = infodict[@"productName"];
    NSString * imageUrl = [NSString stringWithFormat:@"%@%@",BASE_URL,infodict[@"productImg"]];
    [cell.productImageView sd_setImageWithURL:[NSURL URLWithString:imageUrl] placeholderImage:nil];
    
    cell.productPrice.text = ((NSNumber*)infodict[@"price"]).stringValue;
    
    
    return cell;
    
    
}



-(NSInteger)tableView:(UITableView *)tableView numberOfRowsInSection:(NSInteger)section
{
    
    
    return _orderProductArray.count;
    
    
}


- (IBAction)expressInfoButtonClicked:(id)sender {
    
    
    
    OrderInfoTableViewCell * cell = (OrderInfoTableViewCell*)[sender superview].superview;
    
    NSLog(@"%@",cell.productName.text);
}


